<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background">

    <ImageView
        android:id="@+id/card_background"
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/practice_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:fontFamily="@font/istokweb_bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background" />

    <!-- Radio Group -->
    <RadioGroup
        android:id="@+id/difficulty_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toBottomOf="@id/card_background">

        <RadioButton
            android:id="@+id/very_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_regular"
            android:text="Very easy"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_regular"
            android:text="Easy"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_regular"
            android:text="Medium"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_regular"
            android:text="Hard"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/very_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_regular"
            android:text="Very hard"
            android:textSize="20sp" />
    </RadioGroup>

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/flip_button"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:layout_margin="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/istokweb_bold"
        android:text="Next"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>