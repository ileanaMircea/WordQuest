<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/dialog_back"
        android:layout_width="33dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front"
        android:fontFamily="@font/istokweb_italic"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <EditText
        android:id="@+id/front_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_dialog"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:fontFamily="@font/istokweb_italic"
        android:hint="Bonjour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_translate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:backgroundTint="#D94F5C"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:elevation="28dp"
            android:translationZ="8dp"
            android:fontFamily="@font/istokweb_bold"
            android:text="Translate"
            android:textColor="@color/black"
            android:minWidth="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="28sp"
        android:fontFamily="@font/istokweb_italic"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/back_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_dialog"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:fontFamily="@font/istokweb_italic"
        android:hint="Hello" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:backgroundTint="#D94F5C"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:elevation="28dp"
            android:translationZ="8dp"
            android:fontFamily="@font/istokweb_bold"
            android:text="Save"
            android:textColor="@color/black"
            android:minWidth="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />
    </LinearLayout>
</LinearLayout>
