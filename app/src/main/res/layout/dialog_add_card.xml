<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:padding="32dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/dialog_back"
        android:layout_width="33dp"
        android:layout_height="41dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/front_new"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_dialog"
        android:fontFamily="@font/istokweb_italic"
        android:hint="front"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/back_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_back" />

    <EditText
        android:id="@+id/back_new"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/input_dialog"
        android:fontFamily="@font/istokweb_italic"
        android:hint="back"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/front_new"
        app:layout_constraintTop_toTopOf="@+id/front_new"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_translate"
        android:layout_width="244dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:elevation="8dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="Translate"
        android:translationZ="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/front_new" />

    <!-- Example Sentence EditText -->
    <EditText
        android:id="@+id/example_sentence"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_dialog"
        android:fontFamily="@font/istokweb_italic"
        android:gravity="top|start"
        android:hint="Example sentence"
        android:inputType="textMultiLine"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_translate" />

    <!-- Generate with AI Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_generate_example"
        android:layout_width="244dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/blue"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="Generate with AI"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/example_sentence" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/red"
        android:elevation="8dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="8dp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_generate_example" />

</androidx.constraintlayout.widget.ConstraintLayout>