<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity"
    android:background="@drawable/default_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="375dp"
        android:layout_height="350dp"
        android:layout_margin="16dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="129dp"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/read_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/progress_profile_btn"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:layout_marginStart="218dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="124dp"
                android:backgroundTint="@color/gray"
                android:elevation="18dp"
                android:fontFamily="@font/istokweb_regular"
                android:text="Progress"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:translationZ="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_btn2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_profile_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="218dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/gray"
                android:elevation="18dp"
                android:fontFamily="@font/istokweb_regular"
                android:text="Edit profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:translationZ="8dp"
                app:layout_constraintBottom_toTopOf="@+id/progress_profile_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.176"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="36dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.217" />

            <TextView
                android:id="@+id/name_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="240dp"
                android:layout_marginBottom="116dp"
                android:fontFamily="@font/istokweb_bold_italic"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_img" />

            <TextView
                android:id="@+id/language_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="79dp"
                android:layout_marginEnd="81dp"
                android:fontFamily="@font/istokweb_bold_italic"
                android:text="English Native Speaker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/progress_profile_btn"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.805" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/read_profile_btn"
        android:layout_width="211dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/dark_green"
        android:elevation="16dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="Read"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="8dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/decks_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/decks_profile_btn"
        android:layout_width="211dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/dark_green"
        android:elevation="38dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="My decks"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="8dp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/games_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_profile_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/games_profile_btn"
        android:layout_width="211dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/dark_green"
        android:elevation="16dp"
        android:fontFamily="@font/istokweb_bold"
        android:text="Games"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="8dp"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decks_profile_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>